@model IEnumerable<Login.Teacher>

@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h2>Teacher List</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Suject Taught</th>
        <th>Actions</th>
    </tr>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.id</td>
            <td>@teacher.name</td>
            <td>@teacher.subject_taught</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = teacher.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = teacher.id })
            </td>
        </tr>
    }
</table>
<a href="@Url.Action("Create")">Add Teacher</a>