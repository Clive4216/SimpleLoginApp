<style>
    h2 {
        text-align: center;
    }
</style>
<body>
    <h2>Staff List</h2>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Designation</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.id</td>
                    <td>@staff.name</td>
                    <td>@staff.designation</td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = staff.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = staff.id })
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <br />
    <hr />
    <div class="container">
        <a href="@Url.Action("Create", "Staff")">Add Staff</a> |
        <a href="@Url.Action("Index", "Staff")">View Staff</a>
    </div>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });


    </script>
</body>